{
  "env": {
    "es2021": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": [
      "**/tsconfig.json"
    ]
  },
  "plugin": [
    "@typescript-eslint"
  ],
  "ignorePatterns": [
    "**/build/*",
    "**/node_modules/*",
    "**/public/*",
    "**/tsconfig.json"
  ],
  "rules": {},
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ]
}